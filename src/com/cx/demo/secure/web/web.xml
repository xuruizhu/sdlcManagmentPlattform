<?xml version="1.0"?>

<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
    version="2.4">

	<display-name>demo-secure</display-name>
	<description>A non-secure version of the vulnerable forum demo application</description>

	<session-config> 
		<session-timeout>30</session-timeout> 
	</session-config> 
	
	<!-- Login Servlet (Default) -->
	<!-- ======================= -->
 
	<servlet> 
	    <servlet-name>LoginJSP</servlet-name>
    	<jsp-file>/login.jsp</jsp-file> 
	</servlet> 
	<servlet> 
		<servlet-name>LoginServlet</servlet-name> 
    	<servlet-class>com.cx.demo.secure.servlets.LoginServlet</servlet-class>
	</servlet> 
	<servlet> 
		<servlet-name>RegisterServlet</servlet-name> 
    	<servlet-class>com.cx.demo.secure.servlets.RegisterServlet</servlet-class>
	</servlet> 
	<servlet> 
	    <servlet-name>UserJSP</servlet-name> 
    	<jsp-file>/user.jsp</jsp-file> 
	</servlet> 
	<servlet> 
		<servlet-name>UserServlet</servlet-name> 
    	<servlet-class>com.cx.demo.secure.servlets.UserServlet</servlet-class>
	</servlet> 
	<servlet> 
	    <servlet-name>AdminJSP</servlet-name> 
    	<jsp-file>/admin.jsp</jsp-file> 
	</servlet> 
	<servlet> 
		<servlet-name>AdminServlet</servlet-name> 
    	<servlet-class>com.cx.demo.secure.servlets.AdminServlet</servlet-class>
	</servlet> 
	<servlet> 
	    <servlet-name>ForumJSP</servlet-name>
    	<jsp-file>/forum.jsp</jsp-file> 
	</servlet> 
	<servlet> 
		<servlet-name>ForumServlet</servlet-name> 
    	<servlet-class>com.cx.demo.secure.servlets.ForumServlet</servlet-class>
	</servlet> 

	<!-- SERVLET MAPPINGS -->
	<!-- ================ -->

	<!-- Default -->
	<servlet-mapping> 
		<servlet-name>LoginJSP</servlet-name> 
    	<url-pattern>/login.jsp</url-pattern>
	</servlet-mapping>
	<servlet-mapping> 
		<servlet-name>LoginServlet</servlet-name> 
    	<url-pattern>/login.do</url-pattern>
	</servlet-mapping>
	<servlet-mapping> 
		<servlet-name>RegisterServlet</servlet-name> 
    	<url-pattern>/register.do</url-pattern>
	</servlet-mapping>
	<servlet-mapping> 
		<servlet-name>UserJSP</servlet-name> 
    	<url-pattern>/user.jsp</url-pattern>
	</servlet-mapping>
	<servlet-mapping> 
		<servlet-name>UserServlet</servlet-name> 
    	<url-pattern>/user.do</url-pattern>
	</servlet-mapping> 
	<servlet-mapping> 
		<servlet-name>AdminJSP</servlet-name> 
    	<url-pattern>/admin.jsp</url-pattern>
	</servlet-mapping>
	<servlet-mapping> 
		<servlet-name>AdminServlet</servlet-name> 
    	<url-pattern>/admin.do</url-pattern>
	</servlet-mapping> 
	<servlet-mapping> 
		<servlet-name>ForumJSP</servlet-name> 
    	<url-pattern>/forum.jsp</url-pattern>
	</servlet-mapping> 
	<servlet-mapping> 
		<servlet-name>ForumServlet</servlet-name> 
    	<url-pattern>/forum.do</url-pattern>
	</servlet-mapping> 
	 
	<!-- REDIRECTION SERVLET -->
	<!-- =================== -->
    <servlet>
      <servlet-name>RedirectServlet</servlet-name>
      <servlet-class>RedirectServlet</servlet-class>                    
    </servlet>
    <servlet-mapping>
      <servlet-name>RedirectServlet</servlet-name>
      <url-pattern>/redirect</url-pattern>
    </servlet-mapping>
    	
</web-app>
